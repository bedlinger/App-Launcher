{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "App-Launcher",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "App-Launcher",
        "width": 800,
        "height": 550,
        "resizable": false,
        "fullscreen": false,
        "transparent": false,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "focus": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "title": "App-Launcher"
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "nsis"],
      "identifier": "com.bedlinger.app-launcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
